<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">
        <TextView android:id="@+id/tvObserverName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="2dp" />
        <TextView android:id="@+id/tvShbIndividualId" android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="2dp" />
        <TextView android:id="@+id/tvNumberOfBirds" android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="2dp" />
        <TextView android:id="@+id/tvLocation" android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="2dp" />
        <TextView android:id="@+id/tvDate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="2dp" />
        <TextView android:id="@+id/tvTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="2dp" />
        <TextView android:id="@+id/tvHeightOfTree" android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="2dp" />
        <TextView android:id="@+id/tvHeightOfBird" android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="2dp" />
        <TextView android:id="@+id/tvActivityType" android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="2dp" />
        <TextView android:id="@+id/tvSeenHeard" android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="2dp" />
        <TextView android:id="@+id/tvActivityDetails" android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="2dp" />
        <TextView android:id="@+id/tvActivity" android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="2dp" />
    </LinearLayout>
</HorizontalScrollView>
